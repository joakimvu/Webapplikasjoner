generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = "file:./dev.db"
}

model Feed {
  id            String        @id @default(cuid())
  name          String
  url           String        @unique
  author        User?          @relation(fields: [authorId], references: [id])
  authorId      String?
  tags          FeedTag[]
  followers     FeedFollow[]
  // Kan kalle den for noe annet med
  @@map("feeds")
}

model User {
  id           String         @id @default(cuid())
  email        String         @unique
  nickname     String?
  feeds        Feed[]
  follows      FeedFollow[]

  @@map("users")
}

model FeedTag {
  id    String @id @default(cuid())
  name  String @unique
  feeds Feed[]
  @@map("feed_tags")
}

model FeedFollow {
    createdAt    DateTime @default(now())
  // mange til mange med User
    user User    @relation(fields: [userId], references: [id])
    userId       String
    // mange til mange med Feed
    feed Feed    @relation(fields: [feedId], references: [id])
    feedId   String
    
    @@id([userId, feedId])
    @@map("feed_follow")
}